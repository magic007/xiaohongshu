/* components/custom-card/index.wxss */
.card {
  margin: 10px;
  padding: 15px;
  border-radius: 8px;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.card-content {
  margin-top: 10px;
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}