/* components/custom-card/index.wxss */
.card {
  margin: 10px;
  padding: 15px;
  border-radius: 8px;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.card-content {
  margin-top: 10px;
  font-size: 14px;
  color: #666;
  line-height: 1.5;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 15px;
}

.like-container {
  display: flex;
  align-items: center;
}

.like-icon {
  width: 20px;
  height: 20px;
}

.like-count {
  margin-left: 5px;
  font-size: 14px;
  color: #666;
}