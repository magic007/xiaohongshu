.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  padding-bottom: env(safe-area-inset-bottom);
}

.action-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 100%;
  background: transparent;
  padding: 0;
  margin: 0 20rpx;
  border: none;
  line-height: normal;
  min-width: 100rpx;
}

.action-item::after {
  border: none;
}

.icon-wrapper {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 分享按钮样式 */
.share-button {
  flex-direction: column !important;
}

.share-button .icon-wrapper {
  margin-bottom: 4rpx;
}

.share-button .text {
  margin-left: 0;
  margin-top: 4rpx;
}

/* 图标基础样式 */
.icon {
  width: 44rpx;
  height: 44rpx;
  -webkit-mask-size: cover;
  mask-size: cover;
  box-sizing: border-box;
  background: #333;
}

/* 激活状态的图标 */
.icon.active {
  background: #fe2c55;
}

/* 未激活状态的图标 */
.icon:not(.active) {
  background: #333;
}

