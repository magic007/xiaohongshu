/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f4f4f4;
}

.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
}

.main-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-bottom: 50px;
  box-sizing: border-box;
}

.scrollarea {
  flex: 1;
  height: 100%;
  background: #f4f4f4;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  background: #fff;
}

.search-container {
  width: 85%;
  padding: 8px 12px;
  display: flex;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
}

.logo {
  width: 60px;
  height: 32px;
  background: #FE2C55;
  border-radius: 6px;
  color: #fff;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8px;
  flex-shrink: 0;
  font-weight: bold;
}

.search-box {
  flex: 1;
  height: 32px;
  background: #F6F6F6;
  border-radius: 16px;
  display: flex;
  align-items: center;
  padding: 0 12px;
  margin-right: 8px;
}

.search-icon {
  position: relative;
  width: 12px;
  height: 12px;
  border: 2px solid #999;
  border-radius: 50%;
  margin-right: 8px;
  flex-shrink: 0;
}

.search-icon::after {
  content: '';
  position: absolute;
  width: 2px;
  height: 6px;
  background: #999;
  bottom: -4px;
  right: -4px;
  transform: rotate(-45deg);
}

.more-icon {
  width: 24px;
  height: 24px;
  padding: 0 4px;
  flex-shrink: 0;
}

input {
  flex: 1;
  font-size: 13px;
}

.search-placeholder {
  color: #999;
  font-size: 13px;
}

.nav-scroll {
  position: sticky;
  top: 0;
  background: #fff;
  white-space: nowrap;
  height: 40px;
  padding: 0 12px;
  border-bottom: 1px solid #f5f5f5;
  z-index: 99;
}

.nav-item {
  display: inline-block;
  padding: 0 12px;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  color: #666;
}

.nav-item.active {
  color: #333;
  font-weight: bold;
  position: relative;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 6px;
  left: 50%;
  transform: translateX(-50%);
  width: 16px;
  height: 2px;
  background: #333;
}

.content-list {
  background: #f4f4f4;
  padding-bottom: calc(50px + env(safe-area-inset-bottom));
}

.card-container {
  padding: 8px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.card-item {
  width: calc(50% - 4px);
  margin-bottom: 8px;
  border-radius: 8px;
  overflow: hidden;
  background: #fff;
}

.loading {
  text-align: center;
  padding: 10px 0;
  color: #999;
  font-size: 12px;
  margin-bottom: env(safe-area-inset-bottom);
}

/* 发布按钮样式 */
.publish-btn {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(to right, #fe2c55, #ff4d6d);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(254, 44, 85, 0.4);
  z-index: 100;
}

.publish-btn .plus {
  color: #fff;
  font-size: 60rpx;
  font-weight: 300;
  line-height: 1;
}
