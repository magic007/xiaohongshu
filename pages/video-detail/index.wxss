.content-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 166rpx; /* 留出 action-bar 的高度 */
  z-index: 90;
  padding: 0;
  color: #fff;
  padding-bottom: 20rpx; /* 增加底部间距 */
}

.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 40rpx;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.author-name {
  font-size: 32rpx;
  font-weight: 600;
  flex: 1;
  color: #fff;
}

.follow-btn {
  padding: 10rpx 30rpx;
  background: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
}

.follow-btn.following {
  background: #333;
  color: #fff;
  font-weight: 600;
}

.note-content {
  margin-bottom: 20rpx; /* 减小底部间距 */
  padding: 0 40rpx;
  position: relative;
}

.note-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.note-text {
  font-size: 32rpx;
  color: #fff;
  line-height: 1.6;
  height: calc(1.6em * 2);
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin: 0;
  transition: all 0.3s ease;
  font-weight: 600;
}

.note-text.expanded {
  height: auto;
  -webkit-line-clamp: unset;
  margin-bottom: 16rpx;
}

.note-info {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  z-index: 2;
}

.note-time {
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
}

.note-time.show {
  display: block;
}

.note-tags {
  color: #fff;
  font-size: 28rpx;
  display: block;
  font-weight: 600;
}

.tag-item {
  margin-right: 12rpx;
}

.expand-btn {
  font-size: 28rpx;
  color: #fff;
  padding: 4rpx 0;
  position: relative;
  z-index: 2;
  font-weight: 600;
}

.expand-btn.expanded {
  color: #fff;
}

.expand-area {
  position: relative;
  text-align: center;
  margin-top: 20rpx;
}

.expand-mask {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 100%;
  height: 120rpx;
  background: linear-gradient(to top, #000, transparent);
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.expand-mask.hide {
  display: none;
}

.progress-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 136rpx; /* 调整位置，避免与 action-bar 重叠 */
  height: 40rpx;
  padding: 18rpx 0;
  background: transparent;
  z-index: 95;
}

.progress-inner {
  position: relative;
  height: 4rpx;
  background: #fff;
  width: 0;
  transition: width 0.1s linear;
}

.progress-inner::after {
  content: '';
  position: absolute;
  right: -8rpx;
  top: -6rpx;
  width: 16rpx;
  height: 16rpx;
  background: #fff;
  border-radius: 50%;
}

.interaction-buttons {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 40rpx;
  background: #000;
  height: 160rpx;
  box-sizing: border-box;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.interaction-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.icon-like, .icon-comment, .icon-collect, .icon-share {
  width: 56rpx;
  height: 56rpx;
  background: #fff;
  mask-size: cover;
  -webkit-mask-size: cover;
}

.icon-like.active {
  background: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
}

.interaction-btn text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
}

