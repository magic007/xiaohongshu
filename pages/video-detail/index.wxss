.video-detail {
  width: 100vw;
  height: 100vh;
  position: relative;
  background: #000;
}

.main-video {
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  background: #000;
}

.nav-buttons {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 10;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
}

.nav-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(4px);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-back, .icon-home {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
  mask-size: cover;
  -webkit-mask-size: cover;
}

