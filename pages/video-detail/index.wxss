.content-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  padding: 40rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
  color: #fff;
}

.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.author-name {
  font-size: 32rpx;
  font-weight: 500;
  flex: 1;
}

.follow-btn {
  padding: 10rpx 30rpx;
  background: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #fff;
}

.note-content {
  margin-bottom: 40rpx;
}

.note-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.note-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

.interaction-buttons {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.interaction-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.icon-like, .icon-comment, .icon-collect, .icon-share {
  width: 48rpx;
  height: 48rpx;
  background: #fff;
  mask-size: cover;
  -webkit-mask-size: cover;
}

.icon-like.active {
  background: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
}

.interaction-btn text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

