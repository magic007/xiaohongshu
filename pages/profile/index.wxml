<view class="profile-container">
  <!-- 顶部背景 -->
  <view class="profile-header">
    <!-- 用户信息 -->
    <view class="user-info">
      <view class="avatar-container">
        <view class="avatar"></view>
      </view>
      <view class="user-detail">
        <view class="nickname">小红薯677762ED</view>
        <view class="user-id">小红书号 94151738841</view>
      </view>
    </view>
    
    <!-- 个人简介 -->
    <view class="bio">还没有简介</view>
    
    <!-- 数据统计 -->
    <view class="stats">
      <view class="stat-item">
        <text class="number">0</text>
        <text class="label">关注</text>
      </view>
      <view class="stat-item">
        <text class="number">0</text>
        <text class="label">粉丝</text>
      </view>
      <view class="stat-item">
        <text class="number">0</text>
        <text class="label">获赞与收藏</text>
      </view>
    </view>

    <!-- 设置按钮 -->
    <view class="settings-btn">
      <view class="btn-inner"></view>
    </view>
  </view>

  <!-- 内容标签页 -->
  <view class="content-tabs">
    <view class="tab-header">
      <view class="tab-item {{currentTab === 0 ? 'active' : ''}}" bindtap="switchTab" data-index="0">笔记</view>
      <view class="tab-item {{currentTab === 1 ? 'active' : ''}}" bindtap="switchTab" data-index="1">收藏</view>
      <view class="tab-item {{currentTab === 2 ? 'active' : ''}}" bindtap="switchTab" data-index="2">赞过</view>
    </view>
    <view class="tab-line" style="left: {{currentTab * 33.33}}%"></view>
  </view>

  <!-- 内容区域 -->
  <scroll-view scroll-y class="content-area">
    <!-- 笔记列表 -->
    <view class="content-list" wx:if="{{currentTab == 0}}">
      <view class="grid-container" wx:if="{{noteList.length > 0}}">
        <view class="note-card" wx:for="{{noteList}}" wx:key="id">
          <view class="note-image"></view>
          <view class="note-content">
            <view class="note-title">{{item.title}}</view>
            <view class="note-author">
              <view class="author-avatar"></view>
              <text class="author-name">{{item.author.nickname}}</text>
              <view class="like-count">
                <text class="count">{{item.likes}}</text>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class="empty-tip" wx:else>还没有笔记哦</view>
    </view>

    <!-- 收藏列表 -->
    <view class="content-list" wx:if="{{currentTab == 1}}">
      <view class="grid-container" wx:if="{{collectionList.length > 0}}">
        <view class="note-card" wx:for="{{collectionList}}" wx:key="id">
          <view class="note-image"></view>
          <view class="note-content">
            <view class="note-title">{{item.title}}</view>
            <view class="note-author">
              <view class="author-avatar"></view>
              <text class="author-name">{{item.author.nickname}}</text>
              <view class="like-count">
                <text class="count">{{item.likes}}</text>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class="empty-tip" wx:else>还没有收藏的笔记</view>
    </view>

    <!-- 赞过列表 -->
    <view class="content-list" wx:if="{{currentTab == 2}}">
      <view class="grid-container" wx:if="{{likedList.length > 0}}">
        <view class="note-card" wx:for="{{likedList}}" wx:key="id">
          <view class="note-image"></view>
          <view class="note-content">
            <view class="note-title">{{item.title}}</view>
            <view class="note-author">
              <view class="author-avatar"></view>
              <text class="author-name">{{item.author.nickname}}</text>
              <view class="like-count">
                <text class="count">{{item.likes}}</text>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class="empty-tip" wx:else>还没有赞过的笔记</view>
    </view>
  </scroll-view>
</view> 