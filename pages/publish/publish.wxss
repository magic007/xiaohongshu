.publish-container {
  height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 88rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-left, .nav-right {
  font-size: 28rpx;
  color: #333;
}

.nav-right.active {
  color: #fe2c55;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
}

/* 内容区域样式 */
.content-area {
  flex: 1;
  overflow: hidden;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* 图片上传区域样式 */
.image-upload {
  padding: 30rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 216rpx;
  height: 216rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.upload-btn {
  width: 216rpx;
  height: 216rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.plus {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.text {
  font-size: 24rpx;
  color: #999;
}

/* 文本输入区域样式 */
.text-area {
  padding: 30rpx;
  position: relative;
}

textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.word-count {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  font-size: 24rpx;
  color: #999;
}

/* 分类选择样式 */
.category-section {
  padding: 30rpx;
  border-top: 20rpx solid #f7f7f7;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.category-item {
  padding: 10rpx 20rpx;
  background: #f7f7f7;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.category-item.active {
  background: #ffe8ec;
  color: #fe2c55;
}

/* 位置信息样式 */
.location-section {
  padding: 30rpx;
  border-top: 20rpx solid #f7f7f7;
}

.location-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

.arrow {
  color: #999;
}

/* 底部按钮区域样式 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding-bottom: env(safe-area-inset-bottom);
}

.cancel-btn {
  width: 10%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.publish-btn {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999;
  background: #f5f5f5;
  border-radius: 40rpx;
  margin-left: 20rpx;
}

.publish-btn.active {
  background: linear-gradient(to right, #fe2c55, #ff4d6d);
  color: #fff;
} 