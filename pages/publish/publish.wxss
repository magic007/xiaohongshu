.publish-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}

/* 导航栏样式 */
.nav-bar {
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
}

/* 内容区域样式 */
.content-area {
  flex: 1;
  overflow: hidden;
}

/* 媒体上传区域样式 */
.media-upload {
  padding: 20rpx;
  background: #fff;
}

.media-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.media-item {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.media-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-preview {
  width: 100%;
  height: 100%;
}

.video-duration {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  padding: 4rpx 8rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 20rpx;
  border-radius: 4rpx;
}

.delete-btn {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.upload-btn {
  width: 220rpx;
  height: 220rpx;
  background: #fff;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-btn .plus {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.upload-btn .text {
  font-size: 24rpx;
  color: #999;
}

/* 文本输入区域样式 */
.text-area {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
}

textarea {
  width: 100%;
  height: 200rpx;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 分类选择样式 */
.category-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.category-item {
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.category-item.active {
  background: #ff4444;
  color: #fff;
}

/* 位置信息样式 */
.location-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
}

.location-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.arrow {
  color: #999;
}

/* 底部按钮区域样式 */
.bottom-bar {
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border-top: 1rpx solid #eee;
}

.cancel-btn {
  font-size: 32rpx;
  color: #666;
}

.publish-btn {
  flex: 1;
  height: 80rpx;
  margin-left: 30rpx;
  background: #ddd;
  color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.publish-btn.active {
  background: #ff4444;
} 